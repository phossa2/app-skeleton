{
    "name": "phossa2/app-skeleton",
    "license": "MIT",
    "type": "phossa2-app",
    "description": "Phossa2 application skeleton.",
    "keywords": ["app", "phossa", "phossa2", "framework"],
    "homepage": "https://github.com/phossa2/app-skeleton",
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phossa2"
        }
    ],
    "require": {
        "php": "~5.4.0|~7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "autoload": {
        "psr-4": { "App\\": "" }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs --standard=psr2",
        "format": "phpcbf --standard=psr2"
    },
    "config": {
        "platform": {
            "php": "5.4.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    },
    "archive": {
        "exclude": [ "!vendor", "tests", "composer.lock" ]
    }
}
